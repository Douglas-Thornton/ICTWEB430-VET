<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APP.Pages.UserPreferencesChanger"
             Title="UserPreferences">
    <VerticalStackLayout>
        <StackLayout Padding="20">
            <Label Text="Select font:"/>
            <Picker x:Name="fontPicker">
                <!-- Add enum values here -->
            </Picker>

            <Label Text="Select font size:" />
            <Picker x:Name="fontSizePicker">
                <!-- Add enum values here -->
            </Picker>

            <Button Text="Save" Clicked="OnSaveClicked" HorizontalOptions="CenterAndExpand" Margin="0,20,0,0" />

        </StackLayout>
    </VerticalStackLayout>

</ContentPage>